<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bgr_item_list"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/img_recipe"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:scaleType="center"
        android:src="@drawable/img_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Instant Pot Rice Pilaf"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_recipe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text=" alsich asochnoasnc oaskoiashdfasbaoish akjab iasbfalks casohsaocasnlashf adopiascnapochas0i hoihfoaish"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_recipe"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <ImageView
        android:id="@+id/ic_heart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toTopOf="@id/txt_heart"
        app:layout_constraintStart_toEndOf="@id/img_recipe"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_heart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="#f44336"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_recipe"
        app:layout_constraintTop_toBottomOf="@id/ic_heart" />

    <ImageView
        android:id="@+id/ic_time"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_time"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/txt_time"
        app:layout_constraintStart_toEndOf="@id/ic_heart"
        app:layout_constraintTop_toBottomOf="@id/content"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="300"
        android:textColor="#f44336"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_time"
        app:layout_constraintTop_toBottomOf="@id/ic_time" />

</androidx.constraintlayout.widget.ConstraintLayout>